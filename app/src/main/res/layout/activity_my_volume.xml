<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.MyVolumeActivity">


    <SeekBar android:layout_width="match_parent" android:layout_height="wrap_content"
             android:id="@+id/seekbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
             android:max="100"
            android:layout_marginTop="50dp"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/btn_add"
            android:text="增加"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toBottomOf="@id/seekbar"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/btn_remove"
    android:text="减小"
    app:layout_constraintLeft_toRightOf="@id/btn_add"
    app:layout_constraintTop_toTopOf="@id/btn_add"/>

</androidx.constraintlayout.widget.ConstraintLayout>